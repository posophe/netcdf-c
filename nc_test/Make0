# Test c output
T=nc_test
SRC=nc_test.c error.c test_get.c test_put.c test_read.c test_write.c util.c
#CMD=valgrind --leak-check=full
CMD=gdb --args
#ARGS=persist

CFLAGS=-g -O0 -I.. -I../include
LDFLAGS=../liblib/.libs/libnetcdf.a  -L/usr/local/lib -lhdf5_hl -lhdf5 -lz -lm -lcurl

#	cd .. ; ${MAKE} all

all::
	export LD_RUN_PATH; export CFLAGS; export LDFLAGS; \
        if test "x${SRC}" = x ; then S="${T}.c" ; else S="${SRC}"; fi; \
	gcc -o t ${CFLAGS} $$S ${LDFLAGS}
	${CMD} ./t ${ARGS}

